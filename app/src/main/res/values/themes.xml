<resources>

    <!-- Tema base de la aplicación -->
    <style name="Theme.DonCafetoTPV" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Color de la barra de estado -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Tema sin ActionBar -->
    <style name="Theme.DonCafetoTPV.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- También puedes incluir los colores aquí si quieres que este tema tenga diferencias específicas en cuanto a colores. Si no, heredará los colores del tema base. -->
    </style>

    <!-- Overlay para la AppBar -->
    <style name="Theme.DonCafetoTPV.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Overlay para los popups -->
    <style name="Theme.DonCafetoTPV.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
