<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#3F51B5"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Buscar Clientes"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="#A6A4A4"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnCerrarDialogoBuscarClientes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/icono_cerrar" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/edtFiltrarClientes"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Filtrar Clientes" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RVclientesListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp" />


</LinearLayout>